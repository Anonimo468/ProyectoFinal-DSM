<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    >

    <!-- Botón para abrir el Catálogo -->
    <Button
        android:id="@+id/catalog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colortext"
        android:background="@color/colorNavy"
        android:text="Abrir Catálogo"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"/>

    <!-- RecyclerView para mostrar los productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Espacio adicional para evitar conflictos visuales -->
    <!--View
        android:layout_width="match_parent"
        android:layout_height="16dp"/-->
</LinearLayout>
